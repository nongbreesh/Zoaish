<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myfeed_drawer_layout"
    android:background="#f6f6f6"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/Myfeed_frame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f6f6f6">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:divider="#00000000"
            android:id="@+id/myconversation_listView"
            android:focusable="false"
            android:stackFromBottom="true"
            android:choiceMode="singleChoice"
            android:listSelector="@drawable/list_selected_none"
            android:layout_above="@+id/linearLayout1" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_conversation"
            android:layout_centerHorizontal="true"
            android:baselineAligned="true">

            <EditText
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#3d3d3d"
                android:id="@+id/textInput"
                android:background="@drawable/bg_edittext"
                android:layout_height="45dp"
                android:layout_width="0dip">

            </EditText>

            <Button
                android:text="Send"
                android:layout_height="45dp"
                android:layout_width="70dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/bg_button"
                android:textColor="@android:color/white"
                android:id="@+id/btnSend"></Button>
        </LinearLayout>

    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>