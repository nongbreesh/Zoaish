        <LinearLayout
            android:id="@+id/profileConsole"
            android:layout_width="match_parent"
            android:background="@drawable/bg"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/profileLayout"
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/imageBgProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="#ff6ef38d" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/gradient_bg"
                    android:layout_gravity="bottom"
                    android:alpha=".7"
                    android:layout_height="100dp"></FrameLayout>


                <LinearLayout
                    android:id="@+id/frameimgProfile"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="15dp"
                    android:clipToPadding="true"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/circle">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nike Stefan Shop"
                    android:textColor="#ff5d5d5d"
                    android:shadowRadius="2"
                    android:paddingLeft="5dp"
                    android:lineSpacingExtra="1dp"
                    android:id="@+id/txtFullName"
                    android:layout_marginTop="160dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center|bottom" />
